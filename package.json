{
  "name": "base-bootstrap-project",
  "description": "Include Bootstrap's source Sass and compiled JavaScript bundle via npm.",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "stackblitz": {
    "startCommand": "npm start"
  },
  "scripts": {
    "build": "npm run css",
    "css-compile": "sass --style compressed --source-map --embed-sources --no-error-css --load-path=node_modules assets/vendors/bootstrap/scss/:assets/vendors/bootstrap/css/",
    "css-lint": "stylelint assets/vendors/bootstrap/scss/",
    "css-prefix": "postcss --replace assets/vendors/bootstrap/css/styles.css --use autoprefixer --map",
    "css-compile-rtl": " rtlcss assets/vendors/bootstrap/css/styles.css assets/vendors/bootstrap/css/styles.rtl.css",
    "css": "npm-run-all css-compile css-prefix css-compile-rtl",
    "server": "sirv --dev --no-clear --port 3000",
    "start": "npm-run-all --parallel watch server",
    "watch": "nodemon -e html,scss -x \"npm run css\"",
    "test": "npm-run-all css-lint css"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.3",
    "rtlcss": "^4.1.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.39",
    "postcss-cli": "^11.0.0",
    "sass": "^1.77.6",
    "sirv-cli": "^2.0.2",
    "stylelint": "^16.6.1",
    "stylelint-config-twbs-bootstrap": "^14.1.0"
  }
}
